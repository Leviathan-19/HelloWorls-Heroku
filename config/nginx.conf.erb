daemon off;

worker_processes <%= ENV["NGINX_WORKERS"] || 4 %>;

events { worker_connections 1024; }

http {
  include mime.types;
  default_type application/octet-stream;
  sendfile on;

  server {
    listen <%= ENV["PORT"] %>;
    root /app/public;

    location / {
      try_files $uri /index.html;
    }
    